<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Lista de Tweets - Lab EAI</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h2>Lista de Tweets</h2>
  <div class="container">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Sentimento</th>
          <th>Confiança</th>
          <th>Negativa?</th>
          <th>Conf. Neg.</th>
          <th>Companhia</th>
          <th>Usuário</th>
          <th>Retweets</th>
          <th>Texto</th>
          <th>Data</th>
          <th>Localização</th>
          <th>Detalhes</th>
        </tr>
      </thead>
      <tbody>
        <% if (tweets && tweets.length > 0) { %>
          <% tweets.forEach(tweet => { %>
            <tr>
              <td data-label="ID"><%= tweet.tweet_id %></td>
              <td data-label="Sentimento"><%= tweet.airline_sentiment %></td>
              <td data-label="Confiança"><%= tweet.airline_sentiment_confidence %></td>
              <td data-label="Negativa?"><%= tweet.negativereason || '-' %></td>
              <td data-label="Conf. Neg."><%= tweet.negativereason_confidence || '-' %></td>
              <td data-label="Companhia"><%= tweet.airline %></td>
              <td data-label="Usuário"><%= tweet.name %></td>
              <td data-label="Retweets"><%= tweet.retweet_count %></td>
              <td data-label="Texto" class="tweet-text" title="<%= tweet.text %>">
                <%= tweet.text.length > 50 ? tweet.text.substring(0, 50) + '...' : tweet.text %>
              </td>
              <td data-label="Data"><%= tweet.tweet_created %></td>
              <td data-label="Localização"><%= tweet.tweet_location || '-' %></td>
              <td data-label="Detalhes">
                <a class="details-link" href="/tweet/<%= tweet.tweet_id %>">Ver Detalhes</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="12" style="text-align:center;color:#888;">Nenhum tweet encontrado.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <a class="dashboard-link" href="/dashboard">Ver Dashboard</a>
    <div style="clear:both;"></div>
  </div>
</body>
</html>
